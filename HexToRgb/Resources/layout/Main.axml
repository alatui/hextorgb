<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Hex Color"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hexColorEditText"
        android:text="#" />
    <Button
        android:text="Convert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/convertButton" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout1"
        android:layout_marginTop="20dp">
        <TableRow
            android:id="@+id/tableRow1"
            android:gravity="center">
            <TextView
                android:text="Red"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="0"
                android:id="@+id/redtextView"
                android:layout_weight="0.33"
                android:textColor="#ffe53935"
                android:gravity="center" />
            <TextView
                android:text="Green"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="1"
                android:id="@+id/greenTextView"
                android:layout_weight="0.34"
                android:textColor="#ff00897b"
                android:gravity="center" />
            <TextView
                android:text="Blue"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="2"
                android:id="@+id/bluetextView"
                android:layout_weight="0.33"
                android:textColor="#ff2196f3"
                android:gravity="center" />
        </TableRow>
    </TableLayout>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/backgroundImageView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center"
        android:background="@drawable/rgb_color" />
</LinearLayout>